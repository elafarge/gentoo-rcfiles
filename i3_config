# Rofi as a great launcher
bindsym $mod+d exec "rofi -show run -lines 5 -eh 2 -width 100 -padding 600 -opacity 85 -color-window \\"#002b37, #002b37, #003642\\" -color-normal \\"#002b37, #819396, #002b37, #003642, #819396\\" -color-active \\"#002b37, #008ed4, #002b37, #003642, #008ed4\\" -color-urgent \\"#002b37, #da4281, #002b37, #003642, #da4281\\" -font \\"Monaco 18\\""

# Print Screen triggers scrot
bindsym --release Print exec --no-startup-id scrot -c

# Compton lightweight compositor for transparency and stuff
exec --no-startup-id compton -f -c

# But will be moved to other screens if they are present
exec --no-startup-id ~/.rcfiles/reconfigure_screens.sh
